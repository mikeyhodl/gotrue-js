{
  "name": "gotrue-js",
  "description": "GoTrue API client for JavaScript",
  "version": "0.9.29",
  "author": "Mathias Biilmann Christensen",
  "bugs": "https://github.com/netlify/micro-api-client-lib/issues",
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.2.0",
    "@vitest/coverage-v8": "^4.0.18",
    "cross-env": "^10.1.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.0.0",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.7",
    "npm-run-all2": "^5.0.0",
    "prettier": "^3.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  },
  "homepage": "https://github.com/netlify/gotrue-js",
  "keywords": [
    "api",
    "gotrue",
    "identity",
    "netlify"
  ],
  "license": "MIT",
  "files": [
    "src/",
    "lib/",
    "browser/"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/netlify/gotrue-js.git"
  },
  "scripts": {
    "build:browser": "esbuild src/index.ts --bundle --minify --format=iife --global-name=GoTrue --outfile=browser/gotrue.js",
    "build:lib": "esbuild src/index.ts src/user.ts src/admin.ts src/api.ts --format=cjs --outdir=lib",
    "build:types": "tsc --emitDeclarationOnly",
    "build": "npm run build:browser && npm run build:lib && npm run build:types",
    "typecheck": "tsc --noEmit",
    "prepare": "husky && npm run build",
    "test": "run-s lint prettier:check test:dev",
    "lint": "eslint --cache --max-warnings=0 \"{src,tests}/**/*.ts\"",
    "lint:fix": "eslint --cache --fix \"{src,tests}/**/*.ts\"",
    "prettier:check": "prettier --check \"{src,tests}/**/*.ts\" \"*.{js,mjs,json,md}\"",
    "prettier:fix": "prettier --write \"{src,tests}/**/*.ts\" \"*.{js,mjs,json,md}\"",
    "format": "run-s lint:fix prettier:fix",
    "format:ci": "run-s lint prettier:check",
    "test:dev": "vitest run",
    "test:ci": "vitest run --coverage"
  }
}
