{
  "name": "gotrue-js",
  "description": "GoTrue API client for JavaScript",
  "version": "0.9.29",
  "author": "Mathias Biilmann Christensen",
  "bugs": "https://github.com/netlify/micro-api-client-lib/issues",
  "dependencies": {
    "micro-api-client": "^3.2.1"
  },
  "devDependencies": {
    "@netlify/eslint-config-node": "^7.0.1",
    "@vitest/coverage-v8": "^4.0.18",
    "esbuild": "^0.27.2",
    "eslint-import-resolver-typescript": "^3.10.1",
    "husky": "^9.1.7",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "homepage": "https://github.com/netlify/gotrue-js",
  "keywords": [
    "api",
    "gotrue",
    "identity",
    "netlify"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/netlify/gotrue-js.git"
  },
  "scripts": {
    "build:browser": "esbuild src/index.ts --bundle --minify --format=iife --global-name=GoTrue --outfile=browser/gotrue.js",
    "build:lib": "esbuild src/index.ts src/user.ts src/admin.ts --format=cjs --outdir=lib",
    "build:types": "tsc --emitDeclarationOnly",
    "build": "npm run build:browser && npm run build:lib && npm run build:types",
    "typecheck": "tsc --noEmit",
    "prepare": "husky && npm run build:lib && npm run build:types",
    "prepublishOnly": "run-s prepublishOnly:*",
    "prepublishOnly:checkout": "run-local \"git checkout main\"",
    "prepublishOnly:pull": "run-local \"git pull\"",
    "prepublishOnly:install": "run-local \"npm ci\"",
    "prepublishOnly:test": "npm test",
    "test": "run-s format test:dev",
    "format": "run-s format:check-fix:*",
    "format:ci": "run-s format:check:*",
    "format:check-fix:lint": "run-e format:check:lint format:fix:lint",
    "format:check:lint": "cross-env-shell eslint $npm_package_config_eslint",
    "format:fix:lint": "cross-env-shell eslint --fix $npm_package_config_eslint",
    "format:check-fix:prettier": "run-e format:check:prettier format:fix:prettier",
    "format:check:prettier": "cross-env-shell prettier --check $npm_package_config_prettier",
    "format:fix:prettier": "cross-env-shell prettier --write $npm_package_config_prettier",
    "test:dev": "vitest run",
    "test:ci": "vitest run --coverage"
  },
  "config": {
    "eslint": "--ignore-path .gitignore --cache --format=codeframe --max-warnings=0 \"{src,tests,.github}/**/*.{js,ts,md,html}\"",
    "prettier": "--ignore-path .gitignore --loglevel=warn \"{src,tests,.github}/**/*.{js,ts,md,yml,json,html}\" \"*.{js,ts,yml,json,html}\" \".*.{js,ts,yml,json,html}\" \"!package-lock.json\" \"!CHANGELOG.md\""
  }
}
